<div class="info-wrapper">

    <div class="image-info-wrapper">
        <img src="<%= pinInfo.image_url %>" alt="" class="info-images">
    </div>

    <div class="details-info-wrapper">
        <form action="/pin/<%= pinInfo.id %>?_method=put" method="post">
            <p>Title: 
                <input type="text" name="title" value="<%= pinInfo.title%>">
            </p>
            <p>Description: 
                <input type="text" name="description" value="<%= pinInfo.description %>">
            </p>
            <p>Posted by: <%= pinInfo.username %></p>
            <button class="session-button">Submit</button>
        </form>

        <br>
        
        <form action="/pin/<%= pinInfo.id %>" method="get">
            <button class="session-button">Cancel</button>
        </form>
    </div>

</div>